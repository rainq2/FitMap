<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".homepage.RunningDemo3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/test500"
            android:layout_width="297dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#730485"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/image500"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/app_icon7"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView500"
            android:layout_width="1dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text=""
            tools:ignore="VisualLintBounds" />

    </LinearLayout>


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView501"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時速:"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/speed_text_view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView502"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM/hr    距離:"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/totalDistanceTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>
